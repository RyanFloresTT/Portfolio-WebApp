@inject NavigationManager NavManager
<MudTabs Color="@Color.Primary">
        <MudTabPanel Text="Home" OnClick="@(() => NavManager.NavigateTo("/"))" />
        <MudTabPanel Text="Blog" OnClick="@(() => NavManager.NavigateTo("/blog"))" />
        <MudTabPanel Text="Projects" OnClick="@(() => NavManager.NavigateTo("/projects"))" />
        <MudTabPanel Text="Resume" OnClick="@(() => NavManager.NavigateTo("/resume"))" />
        <MudTabPanel Text="About" OnClick="@(() => NavManager.NavigateTo("/about"))" />
        <MudTabPanel Text="Contact" OnClick="@(() => NavManager.NavigateTo("/contact"))" />
    </MudTabs>

@code {
    MudTheme MyCustomTheme = new MudTheme() {
            Palette = new PaletteLight()
            {
                Primary = "#352F44",
                Secondary = "#5C5470",
                Tertiary = "#B9B4C7",
                Warning = "#FAF0E6"
            },
    };
}
