@page "/"
<PageTitle>Home</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6">
            <MudLink Href="/blog" Underline="Underline.None">
                <MudPaper Elevation="2" Class="mud-secondary pa-4 d-flex align-center justify-center" Style="height: 200px;">
                    <h1>Latest Blog Post</h1>
                </MudPaper>
            </MudLink>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudLink Href="/projects" Underline="Underline.None">
                <MudPaper Elevation="2" Class="mud-tertiary pa-4 d-flex align-center justify-center" Style="height: 200px;">
                    <h1>Currently Working On...</h1>
                </MudPaper>
            </MudLink>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudGrid>
                <MudItem xs="12">
                    <MudLink Href="https://github.com/RyanFloresTT" target=”_blank” Underline="Underline.None">
                        <MudPaper Elevation="2" Class="pa-4 d-flex align-center justify-center" Style="height: 200px;">
                            <MudIcon Class="mx-2 my-auto" Icon="@Icons.Custom.Brands.GitHub" Size="@Size.Large" />
                            <h1>GitHub</h1>
                        </MudPaper>
                    </MudLink>
                </MudItem>
                <MudItem xs="12">
                    <MudLink Href="https://ryanflorestt.itch.io/" target=”_blank” Underline="Underline.None">
                        <MudPaper Elevation="2" Class="pa-4 d-flex align-center justify-center" Style="height: 200px; background-color: #FA5C5C">
                            <MudIcon Class="mx-2 my-auto" Icon="@Icons.Material.Filled.VideogameAsset" Size="@Size.Large" />
                            <h1>Itch.io</h1>
                        </MudPaper>
                    </MudLink>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudCarousel Elevation="2" Class="mud-width-full pa-4" Style="height:100%;" ShowArrows="true" ShowBullets="false" EnableSwipeGesture="true" AutoCycle="true" TData="object">
                <MudCarouselItem Transition="Transition.Fade" Style="@($"background:{Theme.Palette.Tertiary};")">
                    <div class="d-flex flex-column align-center justify-center" style="height:100%">
                        <div class="text-center">
                            <h2>Project 1</h2>
                        </div>
                        <div class="text-center mt-2">
                            <p>Summary for Project 1</p>
                        </div>
                    </div>
                </MudCarouselItem>
                <MudCarouselItem Transition="Transition.Fade" Style="@($"background:{Theme.Palette.TertiaryLighten};")">
                    <MudLink Href="https://github.com/RyanFloresTT" target="_blank" Underline="Underline.None">
                        <div class="d-flex flex-column align-center justify-center" style="height:100%">
                            <div class="text-center">
                                <h2>Project 2</h2>
                            </div>
                            <div class="text-center mt-2">
                                <p>Summary for Project 2</p>
                            </div>
                        </div>
                    </MudLink>
                </MudCarouselItem>
                <MudCarouselItem Transition="Transition.Fade" Style="@($"background:{Theme.Palette.TertiaryDarken};")">
                    <div class="d-flex flex-column align-center justify-center" style="height:100%">
                        <div class="text-center">
                            <h2>Project 3</h2>
                        </div>
                        <div class="text-center mt-2">
                            <p>Summary for Project 3</p>
                        </div>
                    </div>
                </MudCarouselItem>
            </MudCarousel>

        </MudItem>
        <MudItem xs="12" sm="6" md="4">            
            <MudLink Href="https://www.linkedin.com/in/ryan-flores-tt/" target=”_blank” Underline="Underline.None">
                <MudPaper Elevation="2" Class="pa-4 d-flex align-center justify-center" Style="height: 200px; background-color: #0077B5;">
                    <MudIcon Class="mx-2 my-auto" Icon="@Icons.Custom.Brands.LinkedIn" Size="@Size.Large" />
                    <h1 class="my-auto">Ryan Flores</h1>
                </MudPaper>
            </MudLink>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudLink Href="https://twitter.com/_TrustyTea" target=”_blank” Underline="Underline.None">
                <MudPaper Elevation="2" Class="pa-4 d-flex align-center justify-center" Style="height: 200px; background-color: #26a7de;">
                    <MudIcon Class="mx-2 my-auto" Icon="@Icons.Custom.Brands.Twitter" Size="@Size.Large" />
                    <h1 class="my-auto">_TrustyTea</h1>
                </MudPaper>
            </MudLink>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4 d-flex align-center justify-center" Style="height: 200px; background-color: #7289da;">
                <MudIcon Class="mx-2 my-auto" Icon="@Icons.Custom.Brands.Discord" Size="@Size.Large" />
                <h1 class="my-auto">TrustyTea</h1>
            </MudPaper>
        </MudItem>

    </MudGrid>
</MudContainer>

@code {
    private MudTheme Theme = new MudTheme();
}
