@page "/resume"
<PageTitle>Resume</PageTitle>
<MudText Align="Align.Center" Typo="Typo.h1" Color="Color.Tertiary">Resume</MudText>
<MudTimeline Class="ma-16">
    <MudTimelineItem Color="Color.Tertiary" Size="Size.Small">
        <ItemOpposite>
            <MudText Color="Color.Tertiary" Typo="Typo.h4">1970</MudText>
        </ItemOpposite>
        <ItemContent>
            <MudText Color="Color.Tertiary" Typo="Typo.h5" GutterBottom="true">Atom Towns</MudText>
            <MudText Color="Color.Warning">Construction of the town of Pripyat, one of 9 “atom towns” begins, to be inhabited by future employees of the nuclear power plants.</MudText>
        </ItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Tertiary" Size="Size.Small">
        <ItemOpposite>
            <MudText Color="Color.Tertiary" Typo="Typo.h4">1977</MudText>
        </ItemOpposite>
        <ItemContent>
            <MudText Color="Color.Tertiary" Typo="Typo.h5" GutterBottom="true">Operational</MudText>
            <MudText Color="Color.Warning">The first of the Chernobyl Nuclear Power Plants four reactors is ready to operate followed by number 2 in 1978.</MudText>
        </ItemContent>
    </MudTimelineItem>
    <MudTimelineItem Color="Color.Tertiary" Size="Size.Small">
        <ItemOpposite>
            <MudText Color="Color.Tertiary" Typo="Typo.h4">1979</MudText>
        </ItemOpposite>
        <ItemContent>
            <MudText Color="Color.Tertiary" Typo="Typo.h5" GutterBottom="true">Pripyat</MudText>
            <MudText Color="Color.Warning">Pripyat officially proclaimed as a city.<br />The Chernobyl Atomic Power Station reaches its first 10 billion kilowatt-hours of electical output.</MudText>
        </ItemContent>
    </MudTimelineItem>
</MudTimeline>


@code {
    [CascadingParameter]
    protected MudTheme Theme { get; set; }
}
