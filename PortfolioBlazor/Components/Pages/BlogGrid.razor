@page "/blog"
@rendermode InteractiveServer
@inject BlogService BlogService
@using PortfolioBlazor.Components.MyComponents
@using PortfolioBlazor.DTOs
@using PortfolioBlazor.Services

<PageTitle>Blog</PageTitle>

<MudText Class="mt-16" Align="Align.Center" Typo="Typo.h1" Color="Color.Warning">Blogs</MudText>

<Filter />

<MudGrid>
    @foreach(BlogDTO blog in blogs)
    {
        <MudItem xs="12">
            <BlogPostCard></BlogPostCard>
        </MudItem>
    }
</MudGrid>

@code {
    private List<BlogDTO> blogs = new();

    protected override async Task OnInitializedAsync()
    {
        blogs = await BlogService.GetBlogsAsync();
    }
    [CascadingParameter]
    protected MudTheme Theme { get; set; }
}