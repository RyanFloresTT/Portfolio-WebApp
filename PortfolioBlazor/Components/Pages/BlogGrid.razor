@page "/blog"
@rendermode InteractiveServer
@using PortfolioBlazor.Components.MyComponents

<PageTitle>Blog</PageTitle>

<MudText Class="mt-16" Align="Align.Center" Typo="Typo.h1" Color="Color.Warning">Blogs</MudText>

<Filter />

<MudGrid>
    @for (int i = 0; i < 5; i++)
    {
        @if (i == 0)
        {
            <MudItem xs="12">
                <BlogPostCard></BlogPostCard>
            </MudItem>
        }
        else
        {
            <MudItem xs="6">
                <BlogPostCard></BlogPostCard>
            </MudItem>
        }
    }
</MudGrid>

@code {
    [CascadingParameter]
    protected MudTheme Theme { get; set; }
}