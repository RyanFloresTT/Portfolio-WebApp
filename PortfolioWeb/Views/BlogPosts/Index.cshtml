@model IEnumerable<PortfolioWeb.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}
<style>
    .tag-checkbox {
        margin-right: 10px;
    }

    .tag-bubble {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        margin: 5px;
        border-radius: 5px;
        display: inline-block;
    }

    .tag-section {
        margin-left: auto;
    }
</style>
<div class="d-flex flex-column h-100 bg-light">
    <main class="flex-shrink-0">
        <!-- Blog Section-->
        <section class="py-5">
            <div class="container px-5 mb-5">
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bolder mb-0"><span class="text-gradient d-inline">Blog Posts</span></h1>
                </div>
                <form asp-controller="BlogPosts" asp-action="FilterByTags" method="post">
                    <div class="tag-section">
                        <strong>Filter by Tags:</strong>
                        @foreach (var tag in ViewBag.AllTags)
                        {
                            <label class="tag-bubble">
                                <input type="checkbox" name="tagNames" value="@tag.Name" class="tag-checkbox" />
                                @tag.Name
                            </label>
                        }
                    </div>

                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>

                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <a asp-action="Index" class="btn btn-secondary">Clear Filters</a>
                </form>
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-11 col-xl-9 col-xxl-8">
                        @foreach (var blogPost in Model)
                        {
                            <!-- Clickable Blog Post Card -->
                            <a href="@Url.Action("Details", "BlogPosts", new { id = blogPost.Id })" class="card-link">
                                <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
                                    <div class="card-body p-0">
                                        <div class="d-flex align-items-center">
                                            <div class="p-5">
                                                <h2 class="fw-bolder">@blogPost.Name</h2>
                                                <p>@blogPost.Summary</p>
                                                @if (blogPost.Project != null)
                                                {
                                                    <p>Associated Project: <a href="@Url.Action("Details", "Projects", new { id = blogPost.Project.Id })">@blogPost.Project.Name</a></p>
                                                }
                                                <div class="tags-section">
                                                    @if (blogPost.Tags.Count > 0)
                                                    {
                                                        <p>
                                                            <strong>Tags:</strong>
                                                            @foreach (var tag in blogPost.Tags)
                                                            {
                                                                <span class="tag-bubble">@tag.Name</span>
                                                            }
                                                        </p>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </section>
        <section class="py-5 bg-gradient-primary-to-secondary text-white">
            <div class="container px-5 my-5">
                <div class="text-center">
                    <h2 class="display-4 fw-bolder mb-4">Let's build something together</h2>
                    <a class="btn btn-outline-light btn-lg px-5 py-3 fs-6 fw-bolder" href="contact.html">Contact me</a>
                </div>
            </div>
        </section>
    </main>
    </div>
