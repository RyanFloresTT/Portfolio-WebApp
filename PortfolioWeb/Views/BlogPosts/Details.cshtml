@model PortfolioWeb.Models.BlogPost

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        text-align: center;
    }

    .details-container {
        background-color: #f0f0f0;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: left;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        margin-top: 30px;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 10px;
    }

    .details-section {
        display: flex;
        justify-content: space-between;
        text-align: left;
        margin-bottom: 20px;
    }

    .date-section,
    .tag-section {
        text-align: left;
    }

    .tag-section {
        margin-left: auto;
    }

    .separator {
        height: 1px;
        background-color: #d0d0d0;
        margin-bottom: 20px;
    }

    .tag-bubble {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        margin: 5px;
        border-radius: 5px;
        display: inline-block;
    }
</style>

<h1>Details</h1>

<div class="details-container">
    <div class="details-section">
        <div class="date-section">
            <p><strong>Date Published:</strong> @Model.CreatedAt.ToShortDateString()</p>
        </div>
        <div class="tag-section">
            @if (Model.Tags.Count > 0)
            {
                <p>
                    <strong>Tags:</strong>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="tag-bubble">@tag.Name</span>
                    }
                </p>
            }
        </div>
    </div>

    <div class="separator"></div>
    <div>
        <p>@Model.Body</p>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
