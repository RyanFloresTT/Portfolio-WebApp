@model PortfolioWeb.Models.BlogPost

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        text-align: center;
    }

    .details-container {
        background-color: #f0f0f0;
        border-radius: 10px;
        padding: 20px; 
        margin-bottom: 20px;
        text-align: left;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        margin-top: 30px;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 10px;
    }

    .details-section {
        display: flex;
        text-align: center;
        margin-bottom: 20px;
    }

    .date-section,
    .project-section {
        text-align: left;
    }

    .project-section {
        margin-left: auto;
    }

    .separator {
        height: 1px;
        background-color: #d0d0d0;
        margin-bottom: 20px; 
    }
</style>

<div class="title">
    <h1>@Model.Name</h1>
</div>

<div class="details-container">
    <div class="details-section">
        <div class="date-section">
            <p><strong>Date Published:</strong> @Model.CreatedAt.ToShortDateString()</p>
        </div>
        <div class="project-section">
            @if (Model.Project != null)
            {
                <p><strong>Project:</strong> <a href="@Url.Action("Details", "Projects", new { id = Model.Project.Id })">@Model.Project.Name</a></p>
            }
        </div>
    </div>

    <div class="separator"></div>
    <div>
        <p>@Model.Body</p>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
