@model PortfolioWeb.Models.Project

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        text-align: center;
    }

    .details-container {
        background-color: #f0f0f0;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: left;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        margin-top: 30px;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 10px;
    }

    .horizontal-list {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
    }

    .blog-post-link {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .details-section {
        display: flex;
        text-align: center;
        margin-bottom: 20px;
    }

    .date-section,
    .tag-section {
        text-align: left;
    }

    .tag-section {
        margin-left: auto;
    }

    .separator {
        height: 1px;
        background-color: #d0d0d0;
        margin-bottom: 20px;
    }
        
    .tag-bubble {
        background-color: #007bff;
        color: #fff;
        padding: 5px 10px;
        margin: 5px;
        border-radius: 5px;
        display: inline-block;
    }
</style>

<h1>@Model.Name</h1>

<div class="details-container">
    <div class="details-section">
        <div class="date-section">
            <p><strong>Date Created:</strong> @Model.CreatedAt.ToShortDateString()
        </div>
        <div class="tag-section">
            @if (Model.TagIds.Count > 0)
            {
                <p>
                    <strong>Tags:</strong>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="tag-bubble">@tag.Name</span>
                    }
                </p>
            }
        </div>
    </div>

    <div class="separator"></div>
    <div>
        <p>@Model.Body</p>
    </div>
    <div class="separator"></div>
    <div>
        <h2>Associated Blog Posts:</h2>
        <ol class="horizontal-list">
            @foreach (var blogPost in Model.BlogPosts.OrderBy(bp => bp.CreatedAt))
            {
                <li class="blog-post-link">
                    @Html.ActionLink(blogPost.Name, "Details", "BlogPosts", new { id = blogPost.Id })
                </li>
            }
        </ol>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
